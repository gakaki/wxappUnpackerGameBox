.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.red {
    color: #F37878;
}

.gray {
    color: #737373;
}

.light-gray {
    color: #919191;
}

.bg-gray {
    background: #ececec;
}

.z10 {
    z-index: 10;
}

.fixed-top {
    width: 100%;
    position: fixed;
    top: 0;
}

.fixed-bottom {
    width: 100%;
    position: fixed;
    bottom: 0;
}

button.img {
    box-sizing: border-box;
    padding: 0;
    border: none;
}

button.img::after {
    border: none;
}